<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="190dp"
    android:layout_height="190dp"
    android:layout_margin="2dp"
    app:cardBackgroundColor="@color/white"
    android:id="@+id/Product_card"
    app:cardCornerRadius="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/save_shoe_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/shoe_image"
            android:clickable="true"
            android:src="@drawable/bookmark"/>
        <ImageView
            android:id="@+id/shoe_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/dummy_shoe" />

        <TextView
            android:id="@+id/shoe_name"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/shoe_image"
            android:layout_marginLeft="10dp"
            android:text="Name of shoe"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shoe_price"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_below="@id/shoe_name"
            android:layout_marginLeft="10dp"
            android:text="100$"
            android:textColor="@color/gray"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/star_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/shoe_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/shoe_price"
            android:src="@drawable/star" />

        <TextView
            android:id="@+id/shoe_rate"
            android:layout_width="30dp"
            android:gravity="center_vertical"
            android:layout_height="25dp"
            android:layout_below="@id/shoe_name"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/star_icon"
            android:text="5.0"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>